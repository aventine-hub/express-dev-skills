<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express Dev Skills</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <header>
      <h1>Dev Skills</h1>
    </header>
    <div>
      <ul>
        <% skills.forEach(function(t) { %>
        <li>
          <form
            action="/skills/<%= t.id %>?_method=DELETE"
            class="delete-form"
            method="POST"
          >
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= t.id %>"><%= t.skill %></a>
          <%= t.skill %> - <%= t.done ? 'Mastered' : 'Not Mastered' %>
        </li>
        <% }); %>
      </ul>
      <a href="/skills/new">Add Skill</a>
    </div>
  </body>
</html>
